<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/khautrangview"
    tools:context=".activity.chitietthuoc"
    android:background="@color/white">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="785dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hinhanhchitiet"
                android:layout_width="327dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/vitac1"
                tools:layout_editor_absoluteX="41dp"
                tools:layout_editor_absoluteY="2dp" />

            <TextView
                android:id="@+id/tenspchitiet"
                android:layout_width="374dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="-Viên Sủi Bổ Sung Vitamin Myvita Multivitamin Vị Cam (Tuýp 20 Viên)"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="43dp"
                tools:layout_editor_absoluteY="320dp" />

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/giaspchitiet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="25.000đ/tuýt"
                    android:textColor="#4D5AD5"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="43dp"
                    tools:layout_editor_absoluteY="320dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/chitietsp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="hello"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="790dp">

        <Button
            android:id="@+id/muahang"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:background="@drawable/btn_bg"
            android:text="Mua"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>